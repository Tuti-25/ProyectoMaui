<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMaui.Paginas.ConfirmEmail">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <FlexLayout Grid.Row="0" 
                    Direction="Column"
                    AlignItems="Center"
                    >
            <HorizontalStackLayout Margin="0,5,0,20">
                <Image Source="emergency_two.png"
                       HeightRequest="50"
                       WidthRequest="50"
                       Margin="0,0,10,0">

                </Image>
                <Label Text="SALVATIERRA"
                           TextColor="#0055c5"
                       FontSize="30"
                       CharacterSpacing="2"
                           FontAttributes="Bold"
                   Margin="0,5,0,0">

                </Label>
            </HorizontalStackLayout>
            <VerticalStackLayout>
              
                <Label Text="We've emailed you a code"
                       FontSize="20"
                       HorizontalTextAlignment="Center"
                       FontAttributes="Bold"
                       Margin="8,5,0,15">
                </Label>
                <Label Text="To complete your account setup, enter the code we've sent to:"
                       FontSize="13"
                       TextColor="#666"
                       HorizontalTextAlignment="Start"
                       MaximumWidthRequest="250"
                       Margin="10,0,0,0"
                    >
                </Label>
                <Label Text="'EmailAddress'"
                       FontSize="15"
                       TextColor="#111"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Start"
                       MaximumWidthRequest="250"
                       Margin="10,10,0,30"
                       >
                </Label>
            </VerticalStackLayout>

            <HorizontalStackLayout Spacing="10"
                                   Margin="20,0,20,0">
                <Frame BorderColor="#111" 
                       CornerRadius="5" 
                       Padding="0">
                    <Entry HeightRequest="20"
                           WidthRequest="20" 
                           HorizontalTextAlignment="Center">
                    </Entry>
                </Frame>
                <Frame BorderColor="#111" 
                       CornerRadius="5" 
                       Padding="0">
                        <Entry HeightRequest="40"
                           WidthRequest="40" 
                           HorizontalTextAlignment="Center">
                        </Entry>
                    </Frame>
                <Frame BorderColor="#111" 
                       CornerRadius="5" 
                       Padding="0">
                    <Entry HeightRequest="40"
                           WidthRequest="40" 
                           HorizontalTextAlignment="Center">
                    </Entry>
                </Frame>
                <Frame BorderColor="#111" 
                       CornerRadius="5" 
                       Padding="0">
                <Entry HeightRequest="40"
                           WidthRequest="40" 
                           HorizontalTextAlignment="Center">
                </Entry>
                </Frame>
                <Frame BorderColor="#111" 
                       CornerRadius="5" 
                       Padding="0">
                <Entry HeightRequest="40"
                           WidthRequest="40" 
                           HorizontalTextAlignment="Center">
                </Entry>
                </Frame>
                <Frame BorderColor="#111" 
                       CornerRadius="5" 
                       Padding="0">
                    <Entry HeightRequest="40"
                           WidthRequest="40" 
                           HorizontalTextAlignment="Center">
                    </Entry>
                </Frame>
            </HorizontalStackLayout>
            <Button Text="Verify"
                    BackgroundColor="#0c65e3"
                    HeightRequest="5"
                    WidthRequest="200"
                    CornerRadius="2"
                    Margin="0,15,0,0">
            </Button>
            <Label Text="Didn't receive an email? Resend email"
                   TextColor="#3b78d0"
                   Margin="0,10,0,0"
                   >
            </Label>

            <BoxView BackgroundColor="#888"
                     HeightRequest="1"
                     WidthRequest="300"
                     Margin="0,120,0,0">
            </BoxView>
            <HorizontalStackLayout Margin="0,10,0,0">
                <Image Source="emergency_two.png"
                       HeightRequest="30"
                       WidthRequest="30"
                       Margin="0,0,10,0">
                    
                </Image>
                    <Label Text="SALVATIERRA"
                           TextColor="#111"
                           FontAttributes="Bold"
                   Margin="0,5,0,0">

                </Label>
            </HorizontalStackLayout>
        </FlexLayout>
    </Grid>
</ContentPage>

