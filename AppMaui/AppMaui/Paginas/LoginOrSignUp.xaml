<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMaui.Paginas.LoginOrSignUp"
             BackgroundColor="#212429"
             NavigationPage.HasNavigationBar="False">

    <ScrollView>
        <Grid Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="150" />
                <RowDefinition Height="*" />
                <RowDefinition Height="180" />
                <RowDefinition Height="150" />
            </Grid.RowDefinitions>

            
            <FlexLayout Grid.Row="0"
                        Direction="Row"
                        AlignItems="Center"
                        JustifyContent="Center">
                <Image Source="emergency_two.png"
                       HeightRequest="60"
                       WidthRequest="60"
                       Margin="0,0,10,0"/>
                <Label Text="CondoApp"
                       TextColor="White"
                       FontSize="28"
                       FontAttributes="Bold"
                       CharacterSpacing="1.2"/>
            </FlexLayout>


            <FlexLayout Grid.Row="1"
                        Direction="Column"
                        AlignItems="Center"
                        JustifyContent="Center">
            </FlexLayout>

           
            <FlexLayout Grid.Row="2"
                        Direction="Column"
                        AlignItems="Center"
                        JustifyContent="Center">
                <Button Text="Log In"
                        BackgroundColor="#4781D1"
                        TextColor="White"
                        FontSize="18"
                        WidthRequest="250"
                        HeightRequest="50"
                        CornerRadius="12"
                        x:Name="BtnLogIn"
                        Clicked="BtnLogIn_Clicked"/>

                <Button Text="Sign In"
                        BackgroundColor="#2D3035"
                        TextColor="White"
                        FontSize="18"
                        WidthRequest="250"
                        HeightRequest="50"
                        CornerRadius="12"
                        BorderColor="#5b5e65"
                        BorderWidth="1.5"
                        x:Name="BtnSignUp"
                        Clicked="BtnSignUp_Clicked"/>
            </FlexLayout>

          
            <FlexLayout Grid.Row="3"
                        Direction="Row"
                        AlignItems="Center"
                        JustifyContent="Center"
                        Padding="10">
                <Label HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       LineBreakMode="WordWrap"
                       FontSize="11"
                       WidthRequest="280">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="By signing up, you agree to the policy and rule 3.4, allowing us to collect your "
                                  TextColor="#7a7f87"/>
                            <Span Text="credit card information."
                                  TextColor="#4781D1"
                                  TextDecorations="Underline"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </FlexLayout>
        </Grid>
    </ScrollView>
</ContentPage>
