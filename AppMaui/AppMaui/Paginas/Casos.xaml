<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMaui.Paginas.Casos"
             BackgroundColor="#000000"
             NavigationPage.HasNavigationBar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollView Grid.Row="0">
            <Grid RowSpacing="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="100" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0"
                      HeightRequest="45"
                      Margin="0,30,0,0"
                      >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <FlexLayout Grid.Column="0"
                                Margin="0,0,0,0"
                                >
                        <ImageButton
                            Source="linux.png">
                        </ImageButton>
                    </FlexLayout>
                    <FlexLayout Grid.Column="1" 
                                HorizontalOptions="End"
                                Margin="0,0,10,0">
                        <Label Text="Casos"
                               TextColor="#ffffff"
                               FontSize="20"
                               FontAttributes="Bold"
                               VerticalTextAlignment="Center">
                        </Label>
                    </FlexLayout>
                    <FlexLayout Grid.Column="2"
                                HorizontalOptions="End"
                                VerticalOptions="Center"
                                Margin="0,0,5,0">
                        <ImageButton Source="search.png"
                                     HeightRequest="20"
                                     WidthRequest="20"
                                     Scale="0.5">
                        </ImageButton>
                        <ImageButton Source="plus.png"
                                     HeightRequest="20"
                                     WidthRequest="20"
                                     Scale="0.5">
                        </ImageButton>
                    </FlexLayout>
                </Grid>
                <VerticalStackLayout Grid.Row="1"
                                     HorizontalOptions="Center"
                                     Margin="15,40,15,0">
                    <Frame BackgroundColor="#1c1c1f"
                           HeightRequest="60"
                           CornerRadius="10"
                           Padding="0"
                           BorderColor="#000000">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer x:Name="TapFiltros" Tapped="TapFiltros_Tapped">
                                
                            </TapGestureRecognizer>
                        </Frame.GestureRecognizers>
                            <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <ImageButton
                                Grid.Column="0"
                                HorizontalOptions="Center"
                                Source="filter.png"
                                Scale="0.6"
                                Background="#1c1c1f">
                            </ImageButton>
                            <Label 
                                VerticalTextAlignment="Center"
                                HorizontalTextAlignment="Start"
                                Grid.Column="1"
                                Text="Todos los casos"
                                TextColor="#ffffff"
                                FontSize="13"
                                FontAttributes="Bold"
                                Margin="0,0,0,10">
                            </Label>
                            <Label
                                Grid.Column="1"
                                VerticalTextAlignment="End"
                                HorizontalTextAlignment="Start"
                                Text="5 resultados"
                                TextColor="#9a9a9c"
                                FontSize="10"
                                Margin="0,0,0,10">

                            </Label>
                            <ImageButton 
                                Grid.Column="2"
                                         Source="down.png"
                                         Scale="0.4"
                                         HorizontalOptions="End"
                                         Margin="80,0,0,0">
                            </ImageButton>
                        </Grid>
                    </Frame>
                </VerticalStackLayout>
                <Frame Grid.Row="2"
                       Margin="0,10,0,0"
                       HorizontalOptions="Center"
                       BackgroundColor="#1c1c1f"
                       BorderColor="Transparent"
                       CornerRadius="10"
                       Padding="2">
                    <HorizontalStackLayout
                        BackgroundColor="#1c1c1f">
                        <Button
                                Text="Detalles"
                                TextColor="AliceBlue"
                                FontSize="13"
                                CharacterSpacing="1"
                                FontAttributes="Bold"
                                BackgroundColor="#1c1c1f"
                                WidthRequest="170">
                        </Button>
                        <Button
                         Text="Lista"
                          TextColor="#ffffff"
                          FontSize="13"
                          CharacterSpacing="1"
                          FontAttributes="Bold"
                          BackgroundColor="#1c1c1f"
                          WidthRequest="160">
                        </Button>
                    </HorizontalStackLayout>
                </Frame>
                <VerticalStackLayout Grid.Row="3"
                                     BackgroundColor="Transparent"
                                     Margin="0,20,0,0">
                    <HorizontalStackLayout Margin="50,0,0,5"
                                           Grid.Row="0">
                        <Label Text="Fecha de Creacion"
                               TextColor="#919194"
                               FontSize="10"
                               TextTransform="Uppercase"
                               FontAttributes="Bold">
                        </Label>
                    </HorizontalStackLayout>
                    <Frame BackgroundColor="#1c1c1f"
                           Margin="15,0,15,0"
                           HeightRequest="60"
                           CornerRadius="10"
                           Padding="0"
                           BorderColor="#000000">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30" ></ColumnDefinition>
                                <ColumnDefinition Width="*" ></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Image 
                                  Grid.Column="0"
                                  Source="dos.png"
                                  Scale="4"
                                  Margin="20,0,0,0">
                            </Image>
                            <Grid Grid.Column="1"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center"
                                        Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*">

                                    </ColumnDefinition>
                                    <ColumnDefinition Width="*">

                                    </ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <VerticalStackLayout Grid.Column="0"
                                                     VerticalOptions="Center"
                                                     HorizontalOptions="Center">
                                    <Label
                                       Text="Muro mal pintado"
                                       TextColor="#ffffff">
                                    </Label>
                                    <Label Text="Tuti"
                                       TextColor="#9d9da1"
                                       FontSize="10"
                                       Margin="0,0,0,2"
                                       FontAttributes="Bold">
                                    </Label>
                                </VerticalStackLayout>
                                <HorizontalStackLayout Grid.Column="1">
                                    <ImageButton Source="equal.png"
                                             HeightRequest="1"
                                             WidthRequest="12"
                                             Margin="0,0,0,2"
                                             Scale="0.3">
                                    </ImageButton>
                                    <Frame BackgroundColor="#464f59"
                                       CornerRadius="5"
                                       BorderColor="Transparent"
                                           HeightRequest="10"
                                       Padding="10">
                                        <Label Text="Finalizado"
                                           TextColor="#ffffff"
                                           FontSize="11"
                                           TextTransform="Uppercase"
                                               HorizontalTextAlignment="Center"
                                               VerticalOptions="Center"
                                               VerticalTextAlignment="Center"
                                               FontAttributes="Bold"
                                               CharacterSpacing="1">
                                        </Label>
                                    </Frame>
                                </HorizontalStackLayout>
                            </Grid>
                        </Grid>
                    </Frame>
                </VerticalStackLayout>
            </Grid>
        </ScrollView>

        <Grid Grid.Row="1" BackgroundColor="#0a0a0a" Padding="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <VerticalStackLayout Grid.Column="0" HorizontalOptions="Center">
                <ImageButton Source="home.png" HeightRequest="40" WidthRequest="40" Scale="0.8" />
                <Label Text="Home" FontSize="10" TextColor="#8f8e94" HorizontalOptions="Center" FontAttributes="Bold" />
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
                <ImageButton Source="casos.png" HeightRequest="40" WidthRequest="40" Scale="0.8" />
                <Label Text="Casos" FontSize="10" TextColor="#8f8e94" HorizontalOptions="Center" FontAttributes="Bold" />
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="2" HorizontalOptions="Center">
                <ImageButton Source="chat.png" HeightRequest="40" WidthRequest="40" Scale="0.8" />
                <Label Text="Chat" FontSize="10" TextColor="#8f8e94" HorizontalOptions="Center" FontAttributes="Bold" />
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="3" HorizontalOptions="Center">
                <ImageButton Source="notificacion.png" HeightRequest="40" WidthRequest="40" Scale="0.8" />
                <Label Text="Notificaciones" FontSize="10" TextColor="#8f8e94" HorizontalOptions="Center" FontAttributes="Bold" />
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>

